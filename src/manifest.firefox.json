{
    "manifest_version": 3,
    "name": "Altered TCG Builder",
    "version": "1.1.0",
    "description": "Import decks from the Altered TCG Builder to the official website",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://*.altered.gg/*"
    ],
    "background": {
        "scripts": ["background.bundle.js"],
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "altered-tcg-builder@ajordat.com",
            "strict_min_version": "112.0"
        }
    }
}
