{
    "manifest_version": 3,
    "name": "Altered TCG Builder",
    "version": "1.0",
    "description": "Import decks from the Altered TCG Builder to the official website.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://altered.gg/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "background": {
        "service_worker": "background.bundle.js"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "altered-tcg-builder@ajordat.com",
            "strict_min_version": "109.0"
        }
    }
}