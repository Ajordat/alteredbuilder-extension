{
    "manifest_version": 3,
    "name": "Altered TCG Builder",
    "version": "1.0",
    "description": "Import decks from the Altered TCG Builder to the official website.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://altered.gg/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon.png",
            "48": "img/icon.png",
            "128": "img/icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.bundle.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "altered-tcg-builder@ajordat.com",
            "strict_min_version": "109.0"
        }
    }
}