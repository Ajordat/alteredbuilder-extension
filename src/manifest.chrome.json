{
    "manifest_version": 3,
    "name": "Altered TCG Builder",
    "version": "1.0.1",
    "description": "Import decks from the Altered TCG Builder to the official website",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.altered.gg/*"
    ],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    }
}
